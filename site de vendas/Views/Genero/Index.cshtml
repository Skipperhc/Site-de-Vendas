@model site_de_vendas.Models.ViewModel.GeneroViewModel

@{
    ViewData["Title"] = "Lista de generos";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar" method="post">
            <input type="hidden" asp-for="Genero.Id">
            <div class="form-group">
                <label asp-for="Genero.Nome" class="control-label"></label>
                <input asp-for="Genero.Nome" class="form-control"/>
                <span asp-validation-for="Genero.Nome"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success"/>
            </div>
        </form>
    </div>
</div>

<table class="table table-striped table-hover">
    <thead class="bg-success">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Genero.Nome)
        </th>
        <th></th>
    </tr>
    <tr></tr>
    </thead>
    <tbody>
    @foreach (var item in Model.ListaGeneros) {
        <tr>
            <td>
                @Html.DisplayFor(modelitem => item.Nome)
            </td>
            <td>
                <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-primary">Editar</a>
                <a asp-action="Detalhar" asp-route-id="@item.Id" class="btn btn-secondary">Detalhar</a>
                <form method="post" asp-action="Deletar" style="display: inline">
                    <input name="id" id="id" value="@item.Id" class="form-control" hidden/>
                    <input type="submit" value="Excluir" class="btn btn-danger"/>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

@section scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}